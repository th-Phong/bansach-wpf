                                                         VerticalAlignment="Center"
                                                         Foreground="#FFDE742A"
                                                         Kind="AccountCashOutline" />
                                <TextBlock Margin="7,10"
                                           VerticalAlignment="Center"
                                           FontSize="17"
                                           Text="Customer" />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem Height="60">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Width="30"
                                                         Height="30"
                                                         Margin="5,10,10,10"
                                                         VerticalAlignment="Center"
                                                         Foreground="#FF391FAC"
                                                         Kind="FaceAgent" />
                                <TextBlock Margin="7,10"
                                           VerticalAlignment="Center"
                                           FontSize="17"
                                           Text="Staff" />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem Height="60">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Width="30"
